@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bem Vindo - NutriApp</title>
    <style>
        body {
            background-image: url('https://st3.depositphotos.com/1177973/15033/i/600/depositphotos_150333232-stock-photo-nutritionist-doctor-writing-diet-plan.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 40px;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            position: relative;
            z-index: 1;
        }

        .text-center {
            text-align: center;
        }

        .display-4 {
            font-size: 65px;
            margin-bottom: 30px;
            color: #333333;
        }

        .display-2 {
            font-size: 20px;
            margin-bottom: 40px;
            color: #FF5722;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 4px;
            font-size: 18px;
            font-weight: bold;
            text-decoration: none;
            color: #FFFFFF;
            background-color: #FF5722;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #E64A19;
            }

        p {
            margin-top: 40px;
            color: #666666;
        }

        footer {
            background-color: #FF5722;
            color: #fff;
            padding: 10px;
            text-align: center;
            font-family: Arial, sans-serif;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>

    <script src="https://kit.fontawesome.com/d97b4bc62b.js" crossorigin="anonymous"></script>

</head>
<body>
    <div class="container">
        <div class="text-center">
            <h1 class="display-4"> Bem Vindo ao AppNutri <i class="fa-solid fa-carrot fa-bounce" style="color: #ff5722;"></i></h1>
              
            <h2 class="display-2">Selecione uma opção:</h2>

            <a href="@Url.Action("Cadastrar", "Home")" class="btn">Cadastre-se</a>

            <a href="@Url.Action("Login", "Home")" class="btn">Login</a>

            <p>Nos siga nas redes sociais!</p>

            <a href="https://www.facebook.com/" target="_blank"><i class="fab fa-facebook fa-xl" style="color: #a75406;"></i></a>
            <a href="https://www.twitter.com/" target="_blank"><i class="fa-brands fa-twitter fa-xl" style="color: #a75406;"></i></a>
            <a href="https://www.instagram.com/" target="_blank"><i class="fa-brands fa-instagram  fa-xl" style="color: #a75406;"></i></a>
            
        </div>
    </div>
    <footer>
        NutriApp v2.0.1 - 2023
    </footer>
</body>
</html>