<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #FF5722;
            padding: 10px;
            display: flex;
            justify-content: center;
        }

            header a {
                color: #FFFFFF;
                text-decoration: none;
                margin-right: 60px;
                margin-left: 60px;
                font-weight: bold;
                transition: color 0.3s ease;
            }

                header a:hover {
                    color: #E64A19;
                }

        hr {
            border: none;
            border-top: 1px solid #ccc;
            margin: 20px 0;
        }

        footer {
            background-color: #FF5722;
            color: #FFFFFF;
            padding: 10px;
            text-align: center;
            font-size: 14px;
            display: none;
        }
    </style>
</head>
<body>
    <header>
        <a href="/">Home</a>
        <a href="@Url.Action("Cadastrar", "Home")">Cadastro</a>
        
        <a href="@Url.Action("Login", "Home")">Login</a>      
    </header>
    <hr />
    @RenderBody()
</body>
</html>






